<div class="container-fluid">
  <div class="row">
    <div class="col-sm-8">
      <div class="row">
        <% @clothes.each do |cloth| %>
          <div class="col-sm-6">
            <div class="card-fond">
              <div class="card_image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://i2.wp.com/www.trendymood.com/wp-content/uploads/2016/06/Broderie-Love-Me-Do.jpg?zoom=2&resize=840%2C560')">
                <div class="card-category"><%= cloth.name %></div>
                <div class="card-description">
                  <p><%= cloth.brand %>, <%= cloth.description %></p>
                  <p><%= cloth.material %></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>


    <div class="col-sm-4">
      <% @clothes.each do |cloth| %>
        <div class="card-fond">
          <div class="card_image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://i2.wp.com/www.trendymood.com/wp-content/uploads/2016/06/Broderie-Love-Me-Do.jpg?zoom=2&resize=840%2C560')">
            <div class="card-category"><%= cloth.name %></div>
            <div class="card-description">
              <p><%= cloth.brand %>, <%= cloth.description %></p>
              <p><%= cloth.material %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


