<div class="container-fluid">
  <div class="alignement">
    <form>
      <button type="submit" class="submit"><i class="fa fa-search loupe" aria-hidden="true"></i></button>
      <input type="search-index" class="s-i" d="search-clothe" placeholder="T-Shirt Blue Navy">
    </form>
  </div>
  <div class="filter-bar">
    <div class="dollar">
    </div>
    <div class="colors">

    </div>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <div class="row">
        <% @clothes.each do |cloth| %>
          <div class="col-sm-6">
            <div class="card">
              <div class="card_image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://slack-imgs.com/?c=1&url=https%3A%2F%2Fi2.wp.com%2Fwww.trendymood.com%2Fwp-content%2Fuploads%2F2016%2F06%2FBroderie-Love-Me-Do.jpg%3Fzoom%3D2%26resize%3D840%252C560')">
                <div class="card-category"><%= cloth.name %></div>
                <div class="card-description">
                  <p><%= cloth.brand %>, <%= cloth.description %></p>
                  <p><%= cloth.material %></p>
                </div>
              </div>
            </div>

          </div>
        <% end %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="row">
        <div class ="selection">
          <div class="your-board" id="title-box">Your Selection</div>
          <% @clothes.each do |cloth| %>
            <div class="col-sm-12">
                <div class="card">
                  <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://i2.wp.com/www.trendymood.com/wp-content/uploads/2016/06/Broderie-Love-Me-Do.jpg?zoom=2&resize=840%2C560')">
                  </div>
                  <div class="card-description">
                    <p><%= cloth.brand %>, <%= cloth.name %></p>
                    <p><%= cloth.material %></p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




